{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowAccessLoose",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "events:ListEventBuses",
                "events:ListRules",
                "events:ListTargetsByRule",
                "ecr:DescribeRegistry",
                "apigateway:GET"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowSSMAccess",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameters",
                "ssm:GetParameter",
                "ssm:GetParametersByPath",
                "kms:Decrypt"
            ],
            "Resource": [
                "arn:aws:ssm:{{.Region}}:{{.AccountId}}:parameter/linecard/self/self/*",
                "arn:aws:ssm:{{.Region}}:{{.AccountId}}:parameter/linecard/self/self/env"
            ]
        },
        {
            "Sid": "AllowIAMAccess",
            "Effect": "Allow",
            "Action": [
                "iam:*"
            ],
            "Resource": [
                "arn:aws:iam::{{ .AccountId }}:policy/self-*-*",
                "arn:aws:iam::{{ .AccountId }}:role/self-*-*",
                "arn:aws:iam::{{ .AccountId }}:policy/*-lambdas-*",
                "arn:aws:iam::{{ .AccountId }}:role/*-lambdas-*"
            ]
        },
        {
            "Sid": "AllowLambdaAccess",
            "Effect": "Allow",
            "Action": [
                "lambda:*"
            ],
            "Resource": [
                "arn:aws:lambda:{{ .Region }}:{{ .AccountId }}:function:self-*",
                "arn:aws:lambda:{{ .Region }}:{{ .AccountId }}:function:*-lambdas-*"
            ]
        },
        {
            "Sid": "AllowECRRegistryAccess",
            "Effect": "Allow",
            "Action": [
                "ecr:*"
            ],
            "Resource": [
                "arn:aws:ecr:{{ .Region }}:{{ .RegistryAccountId }}:repository/linecard/self/*",
                "arn:aws:ecr:{{ .Region }}:{{ .RegistryAccountId }}:repository/linecard/*-lambdas/*"
            ]
        },
        {
            "Sid": "AllowEventBridgeAccess",
            "Effect": "Allow",
            "Action": [
                "events:DeleteRule",
                "events:RemoveTargets",
                "events:PutRule",
                "events:PutTargets"
            ],
            "Resource": [
                "arn:aws:events:{{ .Region }}:{{ .AccountId }}:rule/self-*",
                "arn:aws:events:{{ .Region }}:{{ .AccountId }}:rule/*-lambdas-*"
            ]
        },
        {
            "Sid": "AllowAPIGatewayAccess",
            "Effect": "Allow",
            "Action": [
                "apigateway:GET",
                "apigateway:POST",
                "apigateway:DELETE",
                "apigateway:PATCH"
            ],
            "Resource": [
                "arn:aws:apigateway:*::/apis",
                "arn:aws:apigateway:*::/apis/*/routes",
                "arn:aws:apigateway:*::/apis/*/routes/*",
                "arn:aws:apigateway:*::/apis/*/integrations",
                "arn:aws:apigateway:*::/apis/*/integrations/*"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/SelfManaged": "true"
                }
            }
        }
    ]
}